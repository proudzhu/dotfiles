#!/bin/bash

if [[ ! -f PKGBUILD ]]; then
  echo "error: No PKGBUILD found in working directory."
  exit 1
fi >&2

eval $(grep '^pkgname=' PKGBUILD)
if [[ -z $pkgname ]]; then
  echo "error: pkgname not found in PKGBUILD"
  exit 1
fi >&2

wget "https://aur.archlinux.org/packages/$(expr substr $pkgname 1 2)/$pkgname/PKGBUILD" -O PKGBUILD.new
